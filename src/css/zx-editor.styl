@import "./config.styl";

$zIndex = 99;
// 底部toolbar高度
$toolbarHeight = 48;
$textstyleHeight = 260;
$listHeight = 50;

.zxeditor-container
  .border-bottom
    &:after
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      content: '';
      border-top: 1px solid $borderColor;
      transform: scaleY(.5);

.zxeditor-container
  display: block;
  margin: 0;
  padding: 0;
  width: 100%;
  *
    margin: 0;
    padding: 0;
    color: $black;
    box-sizing: border-box;
  .zxeditor-content-wrapper
    position relative
    //position: absolute;
    //top: 0;
    //left: 0;
    //width: 100%;
    //bottom: 58px;
    min-height: 200px;
    overflow-y: scroll;
    outline: none;
    transition all .2s
    &.is-empty
      &:before
        position absolute
        z-index: 0
        top: 0;
        left: 0;
        padding: 10px 0;
        content: '输入正文';
        color: #ccc;
    p, h1, h2, h3, h4, li
      line-height: 1.5em;
      padding: 10px 0 0;
    h2
      font-size: 1.2em;
      font-weight: 800 !important;
    h4
      font-weight: 800 !important;
    blockquote
      display: inline-block;
      padding-left: 1em;
      border-left: 3px solid $gray;
    ul
      padding-left: 20px;
      list-style: disc;
    li, p
      color: inherit;
    hr
      margin: 0 20%;
      border: 0;
      border-top: 1px dashed $gray;
    // 子节点为a标签
    .child-node-is-a
      a
        position relative
        display: block;
        padding: 0 21px 0 35px;
        height: 40px;
        background: #F7F7F7;
        border-radius: 6px;
        overflow: hidden;
        text-overflow ellipsis;
        white-space nowrap
        line-height: 40px;
        color: #555;
        text-decoration: none;
        bgImage('../img/link-small');
        background-repeat: no-repeat;
        background-position: 11px center;
        -webkit-background-size: 14px 14px;
        background-size: 14px 14px;
        i
          position absolute;
          z-index: 1;
          right: 0;
          top: 0;
          width: 18px;
          height: 18px;
          bgImage('../img/link-remove');
          -webkit-background-size: cover;
          background-size: cover;
  .zxeditor-toolbar-wrapper
    position: fixed;
    z-index: $zIndex;
    left: 0;
    bottom: 0;
    width: 100%;
    height: $toolbarHeight px;
    background-color: #fff;
    &:after
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      content: '';
      border-top: 1px solid $gray;
      transform: scaleY(.5);
    dl
      dd
        float: left;
        display: flex;
        justify-content center;
        align-items center;
        width: $toolbarHeight px;
        height: $toolbarHeight px;
        line-height: $toolbarHeight px;
        &.pic-hook
          i
            bgImage('../img/pic');
        &.emoji-hook
          i
            bgImage('../img/emoji');
        &.link-hook
          i
            bgImage('../img/link');
        &.summary-hook
          i
            bgImage('../img/summary');
        i
          display: inline-block;
          width: 25px;
          height: 25px;
          -webkit-background-size: cover;
          background-size: cover;

//linkinput-wrapper
.zxeditor-container
  .zxeditor-linkinput-wrapper
    display: flex;
    position: fixed;
    z-index: $zIndex + 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
    justify-content: center;
    align-items: center;
    .linkinput-wrapper
      width: 80%;
      background-color: #fefefe;
      border-radius: 4px;
      overflow: hidden;
      .linkinput-title
        height: 3.5em;
        line-height: 3.5em;
        text-align: center;
      .linkinput-group
        display: flex;
        flex-direction: column;
        margin: 0 10px;
        border: 1px solid $borderColor;
        border-radius: 3px;
        background-color: #fff;
        box-sizing: border-box;
        .link-input
          position: relative;
          display: block;
          margin: 0 5px;
          height: 40px;
          line-height: 40px;
          border: 0;
          outline: none;
          &:first-child
            border-bottom: 1px solid $borderColor;
          &::placeholder
            color: $gray;
      .linkinput-footer
        display: flex;
        justify-content: space-between;
        margin: 1em 10px;
        button
          display: inline-block;
          height: 40px;
          line-height: 40px;
          width: 47%;
          text-align: center;
          background-color: #fff;
          border: 1px solid $borderColor;
          border-radius: 3px;
          letter-spacing: 2px;
          box-sizing: border-box;
          &.disabled
            color: $borderColor;

//text-style-outer-wrapper
.zxeditor-container
  .text-style-outer-wrapper
    .__style-wrapper
      position: relative;
      display: flex;
      height: $listHeight px;
      > div
        position: relative;
        flex: 1;
        line-height: $listHeight px;
        text-align: center;
        font-size: 1.5em;
        &:nth-child(2)
          &:before
            position: absolute;
            top: 0;
            left: 0;
            height: $listHeight px;
            content: '';
            border-left: 1px solid $borderColor;
            transform: scaleX(.5);
          &:after
            position: absolute;
            top: 0;
            right: 0;
            height: $listHeight px;
            content: '';
            border-right: 1px solid $borderColor;
            transform: scaleX(.5);
        &.text-bold
          font-weight: 800;
        &.text-italic
          font-style: italic !important;
        &.through-line
          text-decoration: line-through !important;
    .__color-wrapper
      display: flex;
      position: relative;
      height: $listHeight px;
      dd
        flex: 1;
        position: relative;
        height: $listHeight px;
        &:before
          position: absolute;
          top: 50%;
          left: 50%;
          margin: -14px 0 0 -14px;
          width: 28px;
          height: 28px;
          border-radius: 50%;
          content: '';
        &:after
          position: absolute;
          top: 50%;
          left: 50%;
          margin: -17px 0 0 -17px;
          width: 34px;
          height: 34px;
          border-radius: 50%;
          box-sizing: border-box;
          content: '';
      .__black:before
        background-color: $black;
      .__gray:before
        background-color: $gray;
      .__red:before
        background-color: $red;
      .__yellow:before
        background-color: $yellow;
      .__green:before
        background-color: $green;
      .__blue:before
        background-color: $blue;
      .__purple:before
        background-color: $purple;
      .active
        &.__black:after
          border: 1px solid $black;
        &.__gray:after
          border: 1px solid $gray;
        &.__red:after
          border: 1px solid $red;
        &.__yellow:after
          border: 1px solid $yellow;
        &.__green:after
          border: 1px solid $green;
        &.__blue:after
          border: 1px solid $blue;
        &.__purple:after
          border: 1px solid $purple;
    .__tag-wrapper
      border-top: 5px solid $borderColor;
      > div
        position: relative;
        margin: 0 20px;
        height: $toolbarHeight px;
        line-height: $toolbarHeight px;
        text-align: center;
        &:after
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          content: '';
          border-top: 1px solid $borderColor;
          transform: scaleY(.5);
        &:last-child:after
          border-top: 0;
        > b
          position: relative;
          display: inline-block;
          vertical-align: top;
          margin-right: 8px;
          width: 20px;
          height: $toolbarHeight px;
          text-align: right;
          &:after
            display: inline-block;
        &.__h2
          font-size: 1.2em;
          font-weight: 800 !important;
        &.__h4
          font-weight: 800 !important;
        &.__blockquote
          b:after
            font-size: 2em;
            content: '"';
            margin-top: 8px;
        &.__ul
          b:after
            font-size: 1.5em;
            content: '·';
        i.checked
          display: inline-block;
          position: absolute;
          z-index: 1;
          top: 18px;
          right: 30px;
          width: 16px;
          height: 8px;
          transform: rotate(-45deg);
          &:before, &:after
            display: inline-block;
            position: absolute;
            background-color: $primaryColor;
            content: '';
          &:before
            top: 0;
            left: 0;
            width: 2px;
            height: 8px;
          &:after
            bottom: 0;
            left: 0;
            width: 14px;
            height: 2px;

